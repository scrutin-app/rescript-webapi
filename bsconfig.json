{
  "name": "rescript-webapi",
  "bsc-flags": ["-bs-no-version-header"],
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "tests",
      "type": "dev",
      "subdirs": true
    },
    {
      "dir": "examples",
      "type": "dev"
    }
  ],
  "suffix": ".bs.js",
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "warnings": {
    "number": "+A",
    "error": "+A"
  },
  "bs-dev-dependencies": [
    "@ryyppy/rescript-promise"
  ]
}
